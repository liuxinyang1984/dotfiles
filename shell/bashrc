#for f in ~/.bash/env/*.env; do source "$f"; done   # 环境变量优先
#for f in ~/.bash/alias/*.alias; do source "$f"; done
#for f in ~/.bash/fun/*.fun; do source "$f"; done
#shopt -u nullglob
###



shopt -u nullglob
# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
