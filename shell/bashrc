export TERM=xterm-256color

# 载入.bash配置
## 设置 nullglob 避免无文件时报错
### 按分类 source 配置文件
shopt -s nullglob
for f in ~/.bash/*.env; do source "$f"; done
for f in ~/.bash/*.alias; do source "$f"; done
for f in ~/.bash/*.fun; do source "$f"; done
shopt -u nullglob

### 分级目录
